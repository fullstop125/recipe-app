<div class='container'>
  <div class='headline'>
    <h1>Recipes List</h1>
    <%= link_to 'New Recipe', new_recipe_path, :class => 'btn btn-primary' %>
  </div>
  <% @recipes.each do |recipe| %>
    <div class='recipes border'>

      <div class='name'>
        <h3><%= link_to recipe.name, recipe_path(recipe), :class => 'recipe-title' %></h3>
        <%= button_to 'Remove', recipe_path(recipe), method: :delete, :class => 'btn btn-danger' %>
      </div>

      <div class='description'>
        <p><%= recipe.description %></p>
      </div>
    </div>
  <% end %>

</div>

